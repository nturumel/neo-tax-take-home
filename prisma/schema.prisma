// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model billionaire {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  merchants merchant[] // One-to-many relation with Merchant
	@@map("billionaires")
}

model merchant {
  id            Int          @id @default(autoincrement())
  name          String       @unique
  billionaireId Int? // Foreign key for Billionaire
  billionaire   billionaire? @relation(fields: [id], references: [id])
	@@map("merchants")
}
